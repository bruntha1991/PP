{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Invoice</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Paymentdate</th>
                <td>{{ entity.paymentDate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Paymentstatus</th>
                <td>{{ entity.paymentStatus }}</td>
            </tr>
            <tr>
                <th>Paymentmethod</th>
                <td>{{ entity.paymentMethod }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('invoice') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('invoice_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
